{
    "extends": "standard",
    "rules": {
        "no-undef": "off",
        "semi": ["error", "always"],
        "indent": ["error", 4, {
            "SwitchCase": 1,
            "CallExpression": {
                "arguments": 1
            },
            "FunctionExpression": {
                "parameters": "first"
            }
        }],
        "no-extra-semi": "off",
        "padded-blocks": "off",
        "handle-callback-err": "off",
        "no-new": "off",
        "one-var": "off",
        "no-mixed-operators": "off",
        "no-multiple-empty-lines": "off",
        "space-before-function-paren": "off",
        "no-useless-escape": "off",
        "space-unary-ops": "off",
        "no-extend-native": "off",
        "yoda": "off",
        "curly": "off"
    },
    "plugins": [
        "standard",
        "promise"
    ]
}
